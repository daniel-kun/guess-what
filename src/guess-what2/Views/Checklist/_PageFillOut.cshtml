@model guess_what2.Models.ChecklistModel

<!-- Fill out checklist -->
<div class="container-fluid" id="fillout-page">
    <div class="row">
        <div class="panel panel-default" style="margin-left: 5%; margin-right: 5%;">
            <div class="panel-heading" style="position:relative">
                <div class="panel-heading" style="font-weight: bold;text-shadow: 0 1px 0 #fff;font-size: x-large;">
                    @Model.Title
                </div>
                <button class="btn btn-default" style="position:absolute;top:10px;right:11px;"><b>Create a new checklist</b><br />based on this one</button>
            </div>
            <div class="panel-body" style="border-bottom: 1px solid gray;">
                <span style="color:darkgray;padding-left: 15px;">
                    @Model.Description
                </span>
            </div>
            <div class="panel-body">
                <table class="table" style="color: darkgray">
                    <thead>
                        <tr>
                            <td class="col-md-1">
                                <div style="margin-left:6px;margin-right:3px;text-align:center;">
                                    Checked<br />and OK
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div style="margin-left:3px;margin-right:3px;text-align:center;">
                                    Not<br />checked
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div style="margin-left:3px;margin-right:3px;text-align:center;">
                                    Not<br />applicable
                                </div>
                            </td>
                            <td>
                                <div style="margin-left:3px;margin-right:3px">

                                </div>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            await Html.RenderPartialAsync("_PageFillOutChecklistRow", item);
                        }
                    </tbody>
                </table>
                <div style="margin-top:15px"></div>
                <button class="btn btn-primary">Save results</button>
            </div>
        </div>
    </div>
</div>
<!-- Fill out checklist -->
