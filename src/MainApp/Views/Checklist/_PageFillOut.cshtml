@model Io.GuessWhat.MainApp.Models.ChecklistModel

<!-- Fill out checklist -->
<div class="container-fluid main-section" id="fillout-page">
    <div class="row">
        <div class="panel panel-default" style="margin-left: 5%; margin-right: 5%;">
            @{ await Html.RenderPartialAsync("_PageChecklistHeader"); }
            <div class="panel-body">
                <table class="table" style="color: darkgray">
                    <thead>
                        <tr>
                            <td class="col-md-1">
                                <div style="margin-left:6px;margin-right:3px;text-align:center;">
                                    Checked,<br />OK
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div style="margin-left:3px;margin-right:3px;text-align:center;">
                                    Checked,<br />not OK
                                </div>
                            </td>
                            <td class="col-md-1">
                                <div style="margin-left:3px;margin-right:3px;text-align:center;">
                                    Not checked
                                </div>
                            </td>
                            <td>
                                <div style="margin-left:3px;margin-right:3px">

                                </div>
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            await Html.RenderPartialAsync("_PageFillOutChecklistRow", item);
                        }
                    </tbody>
                </table>
                <div style="margin-top:15px"></div>
            </div>
            <div class="panel-footer panel-warning">
                <div class="input-group">
                    <form action="/c/result" method="post">
                        <input type="hidden" id="template-id" value="@Model.Id" />
                        <input type="text"
                               class="form-control"
                               id="userid"
                               placeholder="User name" />
                        <input type="submit" id="submit-results" class="btn btn-primary" value="Save results" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fill out checklist -->
