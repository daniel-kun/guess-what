@model Io.GuessWhat.MainApp.Models.ChecklistModel

<div class="panel-heading" style="position:relative">
    <div class="panel-heading">
        @Model.Title
    </div>
    <a class="btn btn-default" style="position:absolute;top:10px;right:11px;color:#000;" href="/c/new/@Model.Id"><b>Create a new checklist</b><br />based on this one</a>
</div>
<div class="panel-body" style="border-bottom: 1px solid #cccccc;background-color:#f9f9f9">
    @Html.Raw(CommonMark.CommonMarkConverter.Convert(Model.Description))
</div>
